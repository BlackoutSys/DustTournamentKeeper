@model RegisterUserViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Register"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Register" method="post">
    <div class="row">
        <div class="col-lg-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Name"]</label>
                <div class="col-lg-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["UserName"]</label>
                <div class="col-lg-6">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Email"]</label>
                <div class="col-lg-6">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Surname"]</label>
                <div class="col-lg-6">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Country"]</label>
                <div class="col-lg-6">
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["City"]</label>
                <div class="col-lg-6">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Password"]</label>
                <div class="col-lg-6">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["ConfirmPassword"]</label>
                <div class="col-lg-6">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">@Localizer["Club"]</label>
                <div class="col-lg-6">
                    <select asp-for="ClubId" asp-items="@Model.Clubs" class="form-control">
                        <option value="@null">@Localizer["PleaseSelect"]</option>
                    </select>
                    <span asp-validation-for="ClubId"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <input class="btn btn-dark" type="submit" value="@Localizer["Register"]" /> 
    </div>
</form>