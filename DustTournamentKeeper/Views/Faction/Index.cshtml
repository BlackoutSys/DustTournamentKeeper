@model IEnumerable<Faction>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["FactionsTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["Factions"]</h2>
<a class="btn btn-secondary mb-1" asp-controller="Faction" asp-action="Upsert">@Localizer["Create"]</a>

<table class="table table-striped table-dark table-hover table-sm table-responsive-sm">
    <thead>
        <tr>
            <th scope="col">@Localizer["Name"]</th>
            <th scope="col">@Localizer["Game"]</th>
            <th scope="col">@Localizer["Block"]</th>
            <th scope="col">@Localizer["Slogan"]</th>
            <th scope="col">@Localizer["Logo"]</th>
            <th scope="col">@Localizer["Icon"]</th>
            <th scope="col">@Localizer["Action"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count() == 0)
        {
            <tr><td colspan="4">@Localizer["NoFactions"]</td></tr>
        }
        else
        {
            @foreach (var faction in Model)
            {
            <tr>
                <th scope="row"><a asp-controller="Faction" asp-action="Details" asp-route-id="@faction.Id">@faction.Name</a></th>
                <td><a asp-controller="Game" asp-action="Details" asp-route-id="@faction.Game?.Id">@faction.Game?.Name</a></td>
                <td><a asp-controller="Block" asp-action="Details" asp-route-id="@faction.Block?.Id">@faction.Block?.Name</a></td>
                <td>@faction.Slogan</td>
                <td>
                    @if (faction.Logo != null)
                    {<img src="@faction.Logo" alt="@faction.Name" />}
                </td>
                <td>
                    @if (faction.Icon != null)
                    {<img src="@faction.Icon" alt="@faction.Name" />}
                </td>
                <td><a asp-controller="Faction" asp-action="Remove" asp-route-id="@faction.Id">@Localizer["Remove"]</a></td>
            </tr>
            }
        }
    </tbody>
</table>


