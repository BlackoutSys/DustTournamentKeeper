@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dust Tournament Keeper</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/css/bootstrap.css"></script>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Dust Tournament Keeper</a>
            </div>
            <div>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Tournaments" asp-action="Index">Tournaments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Players" asp-action="Index">Players</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Rankings" asp-action="Index">Rankings</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                </ul>
            </div>
            <div class="navbar-nav mr-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm" class="navbar-right">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a asp-controller="Players" asp-action="Details" title="@Localizer["Manage"]">@Localizer["Hello"] @UserManager.GetUserName(User)!</a>
                            </li>
                            <li>
                                <button type="submit" class="btn btn-link navbar-btn navbar-link">@Localizer["LogOff"]</button>
                            </li>
                        </ul>
                    </form>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">@Localizer["LogIn"]</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <header></header>

    <main>

    </main>

    <footer class="footer">
        <div class="container">

        </div>
    </footer>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="container">
                <span class="text-info">&copy; Blackout Systems 2019</span>
            </div>
        </footer>
    </div>
</body>
</html>
