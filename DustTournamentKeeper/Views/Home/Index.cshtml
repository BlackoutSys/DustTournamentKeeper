<h2>@Localizer["ChooseYourGame"]</h2>

@foreach (var game in Model)
{
    <a asp-action="Index" asp-controller="Tournaments" asp-route-gameId="@game.Id" class="btn btn-secondary">
        @if (!string.IsNullOrWhiteSpace(game.Logo))
        {
            <img src="@game.Logo" alt="@game.Name" />
        }
        else
        {
            <span>@game.Name</span>
        }
    </a>
}

