@model IEnumerable<User>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Players"];
}

<h2>@Localizer["Players"]</h2>

<table class="table table-striped table-dark table-hover table-sm table-responsive-sm">
    <thead>
        <tr>
            <th scope="col">@Localizer["UserName"]</th>
            <th scope="col">@Localizer["Name"]</th>
            <th scope="col">@Localizer["Surname"]</th>
            <th scope="col">@Localizer["Country"]</th>
            <th scope="col">@Localizer["City"]</th>
            <th scope="col">@Localizer["Club"]</th>
            <th scope="col">@Localizer["IsActive"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count() == 0)
        {
        <tr><td colspan="6">@Localizer["NoPlayers"]</td></tr>
        }
        else
        {
        @foreach (var user in Model)
            {
        <tr>
            <th scope="row"><a asp-controller="Players" asp-action="Details" asp-route-id="@user.Id">@user.UserName</a></th>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.Country</td>
            <td>@user.City</td>
            <td>@(user?.Club?.Name ?? "-")</td>
            <td>@(user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.Now ? Localizer["Inactive"] : Localizer["Active"])</td>
        </tr>
            }
        }
    </tbody>
</table>
