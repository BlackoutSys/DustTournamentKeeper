@model UserViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PlayersDetails"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name "@Model.UserName" @Model.Surname</h2>

@if (Model.IsOwner || Model.IsAdmin)
{
    <a class="btn btn-secondary mb-1" asp-controller="Players" asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a>
}
@if (Model.IsAdmin)
{
    <a class="btn btn-secondary mb-1" asp-controller="Players" asp-action="Remove" asp-route-id="@Model.Id">@Localizer["Remove"]</a>
}
<a class="btn btn-secondary mb-1" asp-controller="Players" asp-action="Index">@Localizer["List"]</a><br />
<div class="container">
    <div class="row">
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Localizer["Name"]</p></div>
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Model.Name</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["UserName"]</p></div>
        <div class="col-md-4"><p>@Model.UserName</p></div>
    </div><div class="row">
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Localizer["Surname"]</p></div>
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Model.Surname</p></div>
    </div><div class="row">
        <div class="col-md-4"><p>@Localizer["Country"]</p></div>
        <div class="col-md-4"><p>@Model.Country</p></div>
    </div><div class="row">
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Localizer["City"]</p></div>
        <div class="col-md-4 border border-secondary bg-secondary"><p>@Model.City</p></div>
    </div>
    @if (Model.Club != null)
    {
        <div class="row">
            <div class="col-md-4"><p>@Localizer["Club"]</p></div>
            <div class="col-md-4"><p>@Model.Club</p></div>
        </div>
    }
</div>

@if (Model.History.Count > 0)
{
    <h3>@Localizer["History"]</h3>
    <div class="container">
        <table class="table table-striped table-dark table-hover table-sm table-responsive-sm">
            <thead>
                <tr>
                    <th scope="col">@Localizer["Tournament"]</th>
                    <th scope="col">@Localizer["Game"]</th>
                    <th scope="col">@Localizer["Country"]</th>
                    <th scope="col">@Localizer["City"]</th>
                    <th scope="col">@Localizer["Date"]</th>
                    <th scope="col">@Localizer["Block"]</th>
                    <th scope="col">@Localizer["Faction"]</th>
                    <th scope="col">@Localizer["Place"]</th>
                    <th scope="col">@Localizer["TotalBigPoints"]</th>
                    <th scope="col">@Localizer["TotalSmallPoints"]</th>
                    <th scope="col">@Localizer["TotalSoSPoints"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model.History)
                {
                    <tr>
                        <th scope="col"><a asp-controller="Tournaments" asp-action="Details" asp-route-id="@history.TournamentId">@history.Title</a></th>
                        <td>@history.Game</td>
                        <td>@history.Country</td>
                        <td>@history.City</td>
                        <td>@history.Date</td>
                        <td>@history.Block</td>
                        <td>@history.Faction</td>
                        <td>@history.Standing</td>
                        <td>@history.TotalBigPoints</td>
                        <td>@history.TotalSmallPoints</td>
                        <td>@history.TotalSoSPoints</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}