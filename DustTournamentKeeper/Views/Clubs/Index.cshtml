@model IEnumerable<Club>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ClubsTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["Clubs"]</h2>
<a class="btn btn-secondary mb-1" asp-controller="Clubs" asp-action="Upsert">@Localizer["Create"]</a>

<table class="table table-striped table-dark table-hover table-sm table-responsive-sm">
    <thead>
        <tr>
            <th scope="col">@Localizer["Name"]</th>
            <th scope="col">@Localizer["City"]</th>
            <th scope="col">@Localizer["Address"]</th>
            <th scope="col">@Localizer["Slogan"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count() == 0)
        {
            <tr><td colspan="4">@Localizer["NoClubs"]</td></tr>
        }
        else
        {
            @foreach (var club in Model)
            {
            <tr>
                <th scope="row"><a asp-controller="Clubs" asp-action="Details" asp-route-id="@club.Id">@club.Name</a></th>
                <td>@club.City</td>
                <td>@club.Address</td>
                <td>@club.Slogan</td>
            </tr>
            }
        }
    </tbody>
</table>


