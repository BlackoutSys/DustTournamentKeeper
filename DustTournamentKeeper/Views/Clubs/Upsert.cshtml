@model Club

@inject  IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["UpsertClub"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@(Model.Id > 0 ? Localizer["EditClub"] : Localizer["CreateClub"])</h2>

<form asp-action="Upsert" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>@Localizer["Name"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>@Localizer["City"]</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group">
        <label>@Localizer["Address"]</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label>@Localizer["Slogan"]</label>
        <input asp-for="Slogan" class="form-control" />
        <span asp-validation-for="Slogan"></span>
    </div>

    <div class="form-group">
        <label>@Localizer["Logo"]</label>
        <input asp-for="Logo" class="form-control" readonly />
        <button class="btn btn-secondary">@Localizer["UploadLogo"]</button>
        <span asp-validation-for="Slogan"></span>
    </div>

    <div class="text-center">
        <input class="btn btn-secondary" type="submit" value="@Localizer["Save"]" />
        <a class="btn btn-secondary" asp-controller="Clubs" asp-action="Index">@Localizer["Discard"]</a>
    </div>
</form>
