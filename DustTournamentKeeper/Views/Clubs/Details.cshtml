@model Club

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["ClubDetails"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2><a class="btn btn-secondary" asp-controller="Clubs" asp-action="Upsert" asp-route-id="@Model.Id">@Localizer["Edit"]</a><br />
<div class="container">
    <div class="row">
        <div class="col-md-4"><p>@Localizer["Name"]</p></div>
        <div class="col-md-4"><p>@Model.Name</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["City"]</p></div>
        <div class="col-md-4"><p>@Model.City</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["Address"]</p></div>
        <div class="col-md-4"><p>@Model.Address</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["Slogan"]</p></div>
        <div class="col-md-4"><p>@Model.Slogan</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["City"]</p></div>
        <div class="col-md-4"><p>@Model.City</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><p>@Localizer["Logo"]</p></div>
        <div class="col-md-4"><img src="@Model.Logo" alt="@Model.Name" /></div>
    </div>
</div>