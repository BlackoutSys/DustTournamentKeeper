@model IEnumerable<Tournament>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TournamentsTitle"];
}

<script src="~/js/TournamentSpecificRules.js"></script>

<h2>@Localizer["Tournaments"]</h2>
<a class="btn btn-secondary" asp-controller="Tournaments" asp-action="Upsert">@Localizer["Create"]</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">@Localizer["Title"]</th>
            <th scope="col">@Localizer["Country"]</th>
            <th scope="col">@Localizer["City"]</th>
            <th scope="col">@Localizer["Address"]</th>
            <th scope="col">@Localizer["Club"]</th>
            <th scope="col">@Localizer["ArmyPoints"]</th>
            <th scope="col">@Localizer["PlayerLimit"]</th>
            <th scope="col">@Localizer["Rounds"]</th>
            <th scope="col">@Localizer["SpecificRules"]</th>
            <th scope="col">@Localizer["Fee"]</th>
            <th scope="col">@Localizer["Starts"]</th>
            <th scope="col">@Localizer["Ends"]</th>
            <th scope="col">@Localizer["Organizer"]</th>
            <th scope="col">@Localizer["Status"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count() == 0)
        {
            <tr><td colspan="14">@Localizer["NoTournaments"]</td></tr>
        }
        else
        {
            @foreach (var tournament in Model)
            {
                var club = tournament.ClubNavigation != null ? tournament.ClubNavigation.Name : tournament.Club;
                var fee = tournament.Fee + " " + tournament.FeeCurrency;
                <tr>
                    <th scope="row"><a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id">@tournament.Title</a></th>
                    <td>@tournament.Country</td>
                    <td>@tournament.City</td>
                    <td>@tournament.Address</td>
                    <td>@club</td>
                    <td>@tournament.ArmyPoints</td>
                    <td>@tournament.PlayerLimit</td>
                    <td>@tournament.Rounds</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(tournament.SpecificRules))
                        {
                        <button type="button" data-tournament="@tournament.Title" data-sr="@tournament.SpecificRules" class="btn btn-primary sr-button" data-toggle="modal" data-target="#specificRulesModal">
                            +++
                        </button>
                        }
                        else
                        {
                            <p></p>
                        }
                    </td>
                    <td>@fee</td>
                    <td>@tournament.DateStart</td>
                    <td>@tournament.DateEnd</td>
                    <td>@tournament.Organizer.UserName</td>
                    <td>@tournament.Status</td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Specific Rules Modal -->
<div class="modal fade" id="specificRulesModal" tabindex="-1" role="dialog" aria-labelledby="specificRulesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="specificRulesModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="specificRulesModalContent"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>